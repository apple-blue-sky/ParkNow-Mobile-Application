<!doctype html>

<html>
<head>
	<title>Login Page</title>
	<meta charset="utf-8">
	<meta name="viewport" content="width=device-width, initial-scale=1.0">
	<link href="/css/bootstrap.min.css" rel="stylesheet">
	<link href="/css/bootstrap-theme.min.css" rel="stylesheet">
	<link href="/css/introHCI.css" rel="stylesheet">
	<script src="js/jquery-1.11.0.js"></script>
	<script src="js/bootstrap.js"></script>
	<script src="js/parking.js"></script>
</head>
<body class="screen">

	<div>
		<img src="images/logo.png" alt="App Logo" id="appLogoLogin" style="width:100px;height:100px;">
	</div>	

	<!-- Login and Password Fields + Login Button -->
	<div class="loginContainer">
    	<label for="username" class="formLabel">Username</label>
    	<br/>
    	<input type="username" placeholder="Enter Username" name="username" class="loginForm"required>

    	<br/>

    	<label for="password" class="formLabel">Password</label>
    	<br/>
    	<input type="password" placeholder="Enter Password" name="password" class="loginForm" required>

    	<br/>

    	<button class="remove_mobile" id="forgetPass" onclick="window.location.href = 'forgot';">forgot password?</button>

    	<br/>

    	<button id="loginButton" onclick="window.location.href = 'permit';"> LOGIN</button>

    	<br/>
    	

    	<p class="fbOr" style="font-size: 16px;">or</p>

    	<p class="FBLogin fbButton">
			<fb:login-button data-size="large" scope="public_profile, email" onlogin="checkLoginState();"></fb:login-button>
		</p>

    </div>

	<script src="https://code.jquery.com/jquery.js"></script>
	<script src="/js/bootstrap.min.js"></script>

	{{> facebook}}
	<script src="/js/facebook.js"></script>

</body>
</html>